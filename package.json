{
  "name": "TheYolk",
  "version": "0.0.0-alpha.1",
  "main": "app/main.js",
  "author": {
    "name": "Michael Jonker",
    "email": "michael@openpoint.ie",
    "url": "http://openpoint.ie/"
  },
  "homepage":"http://theyolk.openpoint.ie/",
  "bugs":"https://github.com/Openpoint/Yolk/issues",
  "repository" :{
	  "type" : "git",
	  "url" : "https://github.com/Openpoint/Yolk"
  },
  "description": "A modular browser for data driven applications",
  "license" : "GPL-3.0",
  "engines" : { "node" : ">=7.0.0" },
  "dependencies": {
    "ajv": "^5.2.2",
    "angular": "^1.5.8",
    "angular-animate": "^1.5.8",
    "angular-drag-drop": "^3.1.0",
    "angular-route": "^1.5.8",
    "bluebird": "^3.5.0",
    "checksum": "^0.1.1",
    "cpu-stats": "^1.0.0",
    "elasticsearch": "^12.0.1",
    "font-awesome": "^4.7.0",
    "jimp": "^0.2.28",
    "jquery": "^3.1.0",
    "jquery.facedetection": "^2.0.2",
    "musicmetadata": "^2.0.5",
    "request": "^2.75.0",
    "smartcrop": "^1.1.1",
    "tar.gz": "^1.0.5",
    "tree-kill": "^1.1.0",
    "yauzl": "^2.8.0"
  },
  "devDependencies": {
    "cross-env": "^5.0.1",
    "devtron": "^1.4.0",
    "electron": "^1.7.1",
    "electron-builder": "^19.4.0"
  },
  "build": {
    "appId": "ie.openpoint.theyolk",
	"productName":"The Yolk",
    "compression": "maximum",
    "asar": true,
    "copyright": "Copyright Â© 2017 Michael Jonker",
	"publish":{
		"provider":"github",
		"owner":"Openpoint",
		"host":"github.com",
		"protocol":"https",
		"private":false
	},
    "linux": {
      "target": [
        "deb","rpm"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    }
  },
  "scripts": {
    "pack": "build --dir",
	"linux":"build -l --ia32 && build --publish onTagOrDraft",
	"windows":"build -w --ia32 && build --publish onTagOrDraft",
    "mac": "build -m && build --publish onTagOrDraft",
    "Yolk-dev": "cross-env ELECTRON_ENV='development' ./node_modules/.bin/electron ./",
    "Yolk": "./node_modules/.bin/electron ./"
  }
}
