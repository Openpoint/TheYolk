{
  "name": "Yolk",
  "version": "0.1.0",
  "main": "main.js",
  "author": {
    "name": "Michael Jonker",
    "email": "michael@openpoint.ie",
    "url": "http://openpoint.ie/"
  },
  "description": "Alpha yolk for playing music",
  "dependencies": {
    "angular": "^1.5.8",
    "angular-animate": "^1.5.8",
    "angular-drag-drop": "^3.1.0",
    "angular-route": "^1.5.8",
    "bluebird": "^3.5.0",
    "checksum": "^0.1.1",
    "cpu-stats": "^1.0.0",
    "elasticsearch": "^12.0.1",
    "font-awesome": "^4.7.0",
    "jquery": "^3.1.0",
    "jquery.facedetection": "^2.0.2",
    "musicmetadata": "^2.0.5",
    "request": "^2.75.0",
    "sharp": "^0.17.3",
    "smartcrop-sharp": "^1.0.5",
    "tar.gz": "^1.0.5",
    "yauzl": "^2.8.0"
  },
  "devDependencies": {
    "devtron": "^1.4.0",
    "electron": "^1.7.1",
    "electron-builder": "^8.6.0",
    "electron-rebuild": "^1.5.11"
  },
	"build": {
		"appId": "com.theyolk.app",
		"compression": "maximum",
		"asar": false,
		"linux": {
			"target":["deb"],
			"deb":{
				"compression":"gz"
			}
		},
		"win":{
			"target":["nsis"]
		}
	},
  "scripts": {
    "pack": "build --dir",
    "dist": "build -wl --x64",
    "Yolk-dev": "ELECTRON_ENV='development' ./node_modules/.bin/electron ./",
    "Yolk": "./node_modules/.bin/electron ./"
  },
  "postinstall": "install-app-deps"
}
